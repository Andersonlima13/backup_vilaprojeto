  <script>
      function validar() {
          var searchType = document.getElementById('input-select').value;
          var param = document.getElementById('param').value;
          var errorMessage = document.getElementById('error-message');

          if (searchType === 'matricula') {
              var isNumeric = /^\d+$/.test(param);
              if (!isNumeric) {
                  errorMessage.textContent = "Ops! você selecionou o campo 'MATRICULA' ao buscar um nome, Selecione o campo 'NOME' se deseja buscar um aluno por nome";
                  errorMessage.style.display = 'block';
                  return false;
              }
          }
          errorMessage.style.display = 'none';
          return true;
      }
  </script>
